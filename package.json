{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "hatena-bookmark",
  "title": "Hatena-bookmark",
  "description": "Extension for Hatena Bookmark",
  "icon": "extension-icon.png",
  "author": "satouredstone",
  "categories": [
    "Applications"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "search-bookmark",
      "title": "Search Bookmark",
      "description": "Search website from your Hatena bookmark",
      "mode": "view",
      "icon": "extension-icon.png"
    },
    {
      "name": "hot-entries",
      "title": "Show Hot Entries",
      "description": "Show Hatena Bookmark Hot Entries",
      "mode": "view",
      "icon": "extension-icon.png"
    }
  ],
  "preferences": [
    {
      "name": "username",
      "title": "Username",
      "description": "Your Hatena Bookmark username",
      "type": "textfield",
      "defaultValue": "",
      "required": true,
      "placeholder": "Enter your Hatena Bookmark username"
    },
    {
      "name": "apikey",
      "title": "API Key",
      "description": "Your Hatena Bookmark API key",
      "type": "textfield",
      "defaultValue": "",
      "required": true,
      "placeholder": "Enter your Hatena Bookmark API key"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.94.0",
    "@raycast/utils": "^1.17.0",
    "fast-xml-parser": "^5.0.9",
    "html-entities": "^2.5.5"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@testing-library/react": "^16.2.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "@types/react-test-renderer": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.22.0",
    "jsdom": "^26.0.0",
    "prettier": "^3.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-test-renderer": "^19.1.0",
    "typescript": "^5.8.2",
    "vitest": "^3.0.9"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish",
    "test": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "packageManager": "pnpm@10.4.1+sha512.c753b6c3ad7afa13af388fa6d808035a008e30ea9993f58c6663e2bc5ff21679aa834db094987129aa4d488b86df57f7b634981b2f827cdcacc698cc0cfb88af"
}